{
  "name": "@reeba/functions",
  "version": "0.0.1",
  "private": true,
  "description": "Backend API for ReebA",
  "main": "dist/index",
  "types": "dist/index",
  "repository": {
    "type": "git",
    "url": "https://github.com/grindarius/reeba.git",
    "directory": "functions"
  },
  "author": "ReebA Team",
  "license": "MIT",
  "scripts": {
    "dev": "node dist/index.js",
