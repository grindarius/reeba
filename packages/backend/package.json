{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@reeba/backend",
  "version": "1.0.0",
  "private": true,
  "description": "Backend API for ReebA",
  "type": "module",
  "exports": "./dist/backend/src/server.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grindarius/reeba.git",
    "directory": "packages/backend"
  },
  "author": "ReebA Team",
  "scripts": {
    "dev": "node dist/backend/src/server.js",
    "build": "tsc -p ./tsconfig.build.json",
    "build-dev": "tsc -p ./tsconfig.build.json && cp ./.env ./dist/backend && cp ./.env.local ./dist/backend",
    "kill": "pnpm exec kill-port --port 3000",
    "watch": "nodemon",
    "serve:ts-node": "ts-node src/server.ts",
    "watch:ts": "tsc src/server.ts -w",
    "clean": "pnpm exec rimraf dist",
    "fix": "eslint **/*.ts --fix"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^13.0.0",
    "@fastify/multipart": "^9.0.1",
    "@fastify/postgres": "^6.0.1",
    "@fastify/routes": "^6.0.1",
    "@fastify/static": "^8.0.3",
    "@node-rs/argon2": "^2.0.2",
    "@reeba/common": "workspace:*",
    "@reeba/fastify-check-jwt": "workspace:*",
    "@reeba/fastify-frontend-endpoints-generator": "workspace:^1.0.0",
    "@reeba/fastify-local-reverse-geocoder": "workspace:^1.0.0",
    "dayjs": "^1.11.4",
    "dotenv-flow": "^4.1.0",
    "fastify": "~5.2",
    "fastify-favicon": "^5.0.0",
    "nanoid": "^5.0.9",
    "pg": "^8.7.3",
    "pino": "^9.5.0",
    "puppeteer": "^23.11.1",
    "qrcode": "^1.5.1"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.0",
    "@types/dotenv-flow": "^3.2.0",
    "@types/pg": "8.11.10",
    "@types/qrcode": "^1.4.2",
    "@types/resemblejs": "^4.1.0",
    "fast-csv": "^4.3.6",
    "form-data": "^4.0.0",
    "kill-port": "^2.0.1",
    "pino-pretty": "^8.1.0",
    "resemblejs": "^5.0.0",
    "rimraf": "^6.0.1"
  }
}
