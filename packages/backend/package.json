{
  "name": "@reeba/backend",
  "version": "1.0.0",
  "private": true,
  "description": "Backend API for ReebA",
  "main": "dist/backend/src/server.js",
  "types": "dist/backend/src/server.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grindarius/reeba.git",
    "directory": "packages/backend"
  },
  "author": "ReebA Team",
  "scripts": {
    "dev": "node dist/backend/src/server.js",
    "build": "tsc -p ./tsconfig.build.json",
    "build-dev": "tsc -p ./tsconfig.build.json && cp ./.env ./dist/backend && cp ./.env.local ./dist/backend",
    "kill-port": "pnpm dlx kill-port 3000",
    "watch": "nodemon",
    "serve:ts-node": "ts-node src/server.ts",
    "watch:ts": "tsc src/server.ts -w",
    "clean": "pnpm dlx rimraf dist",
    "fix": "eslint **/*.ts --fix"
  },
  "dependencies": {
    "@fastify/cors": "^7.0.0",
    "@fastify/helmet": "^8.0.0",
    "@fastify/multipart": "^6.0.0",
    "@fastify/postgres": "^4.0.0",
    "@fastify/routes": "^4.0.0",
    "@fastify/static": "^5.0.2",
    "@node-rs/argon2": "^1.1.0",
    "@reeba/common": "workspace:^1.0.0",
    "@reeba/fastify-check-jwt": "workspace:^1.0.0",
    "@reeba/fastify-frontend-endpoints-generator": "workspace:^1.0.0",
    "@reeba/fastify-local-reverse-geocoder": "workspace:^1.0.0",
    "dayjs": "^1.10.8",
    "dotenv-flow": "^3.2.0",
    "fastify": "^3.27.0",
    "fastify-favicon": "^3.1.0",
    "nanoid": "^3.3.1",
    "pg": "^8.7.3",
    "puppeteer": "^13.5.1",
    "qrcode": "^1.5.0"
  },
  "devDependencies": {
    "@types/dotenv-flow": "^3.2.0",
    "@types/pg": "^8.6.4",
    "@types/qrcode": "^1.4.2",
    "@types/resemblejs": "^3.2.1",
    "fast-csv": "^4.3.6",
    "form-data": "^4.0.0",
    "pino": "^7.8.0",
    "pino-pretty": "^7.5.2",
    "resemblejs": "^4.1.0"
  }
}
