{
  "name": "@reeba/backend",
  "version": "1.0.0",
  "private": true,
  "description": "Backend API for ReebA",
  "main": "dist/index",
  "types": "dist/index",
  "repository": {
    "type": "git",
    "url": "https://github.com/grindarius/reeba.git",
    "directory": "packages/backend"
  },
  "author": "ReebA Team",
  "scripts": {
    "dev": "node dist/index.js",
    "build": "tsc -p ./tsconfig.json",
    "kill-port": "npx kill-port 3000",
    "watch": "nodemon",
    "serve:ts-node": "ts-node src/index.ts",
    "watch:ts": "tsc -w",
    "clean": "npx rimraf dist && npx rimraf node_modules",
    "rebuild": "npm run clean && npm run watch:ts",
    "fix": "eslint **/*.ts --fix"
  },
  "dependencies": {
    "@reeba/common": "*",
    "bcrypt": "^5.0.1",
    "dotenv": "^10.0.0",
    "fastify": "^3.24.1",
    "fastify-cors": "^6.0.2",
    "fastify-helmet": "^5.3.2",
    "fastify-jwt": "^4.1.1",
    "fastify-postgres": "^3.6.0",
    "pg": "^8.7.1"
  },
  "devDependencies": {
    "@types/pg": "^8.6.3"
  }
}
