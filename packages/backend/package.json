    "nanoid": "^3.1.30",
    "pg": "^8.7.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/dotenv-flow": "^3.2.0",
    "@types/pg": "^8.6.3"
