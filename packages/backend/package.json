{
  "name": "@reeba/backend",
  "version": "1.0.0",
  "private": true,
  "description": "Backend API for ReebA",
  "main": "dist/backend/src/server.js",
  "types": "dist/backend/src/server.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/grindarius/reeba.git",
    "directory": "packages/backend"
  },
  "author": "ReebA Team",
  "scripts": {
